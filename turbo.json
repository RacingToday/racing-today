{
  "$schema": "http://turbo.build/schema.json",
  "pipeline": {
    "dev": {
      "cache": false
    },
    "dev:setup": {
      "cache": false
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["build/**"]
    },
    "deploy": {
      "dependsOn": ["^build"],
      "outputs": ["build/**"]
    },
    "ci": {
      "dependsOn": ["build"],
      "outputs": [],
      "inputs": ["src/**/*.tsx", "src/**/*.ts"]
    },
    "ci:setup": {
      "cache": false
    }
  }
}
